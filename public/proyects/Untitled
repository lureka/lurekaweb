        <div class="video-popup" role="dialog" aria-modal="true" aria-labelledby="video-popup-title" tabindex="-1" aria-hidden="true">
          <button type="button" class="close-video-popup js-close-video-popup" aria-label="Cerrar video"><img src="/images/close.svg" alt="Cerrar"></button>
          <!-- AQUÍ VA EL VÍDEO -->
           <div class="spinner"></div>
        </div>
      </div>
      <script>
        document.addEventListener('click', function(e) {
          const clickedElement = e.target.closest('.js-with-video');
          if (clickedElement) {
            const iframe = clickedElement.querySelector('iframe');
            if (iframe) {
              const videoPopup = document.querySelector('.video-popup');
              const veloPopup = document.querySelector('.velo-popup');
              const existingIframe = videoPopup.querySelector('iframe');
              if (existingIframe) { existingIframe.remove();}
              const clonedIframe = iframe.cloneNode(true);
              videoPopup.appendChild(clonedIframe);
              veloPopup.classList.add('active');
              document.body.classList.add('no-scroll');
            }
          }
        });
        document.addEventListener('click', function(e) {
          if (e.target.closest('.js-close-video-popup') || e.target.closest('.velo-popup')) {
            const veloPopup = document.querySelector('.velo-popup');
            veloPopup.classList.remove('active');
            document.body.classList.remove('no-scroll');
          }
        });
      </script>
